<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rahulballa.newsnapv2.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/takePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="take Picture"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/selectImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="select image"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/darken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="darken"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/brighten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="brighten"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/darken" />

        <Button
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="share"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="inverse"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/share" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_below="@+id/takePicture"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/darken"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/grescale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="greyscale"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/takePicture" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
